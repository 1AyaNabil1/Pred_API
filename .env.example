# ===================================================
# MLflow Model Registry Proxy - Environment Configuration
# ===================================================

# API Configuration
API_TITLE="MLflow Model Registry Proxy"
API_VERSION="1.0.0"
API_HOST="0.0.0.0"
API_PORT=8000

# Security Settings
# Leave API_KEY empty to disable authentication
# For Docker deployment, set a strong API key
API_KEY=your-secret-api-key-here

# CORS - Allowed Origins (comma-separated)
# For Docker deployment: http://localhost:3000,http://localhost:80
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# MLflow Server Configuration
# For Docker: use service name 'mlflow' instead of localhost
# Local: http://localhost:5001
# Docker: http://mlflow:5000
MLFLOW_BASE_URL=http://localhost:5001
MLFLOW_AUTH_TOKEN=

# File Upload Limits
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.pkl,.joblib

# Request Timeouts (seconds)
HEALTH_CHECK_TIMEOUT=5.0
API_TIMEOUT=30.0
MODEL_INVOKE_TIMEOUT=60.0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60/minute

# Logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# React App (Frontend)
# Local development: http://localhost:8000
# Production: https://your-api-domain.com
REACT_APP_API_URL=http://localhost:8000

# Production Database (Optional - for production deployments)
# DB_USER=mlflow
# DB_PASSWORD=your-secure-password
# DB_NAME=mlflow
# S3_BUCKET=your-s3-bucket
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_REGION=us-east-1
